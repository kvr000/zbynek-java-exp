<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>cz.znj.kvr.sw.exp.java.jar.hugejarexec</groupId>
	<artifactId>huge-jar-exec-builder</artifactId>
	<version>0.0.1</version>

	<parent>
		<groupId>cz.znj.kvr.sw.exp.java.jar.hugejarexec</groupId>
		<artifactId>huge-jar-exec-exp-base</artifactId>
		<version>0.0.1</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<properties>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<finalName>huge-jar-exec-builder</finalName>
							<shadedArtifactAttached>true</shadedArtifactAttached>
							<transformers>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
									<mainClass>cz.znj.kvr.sw.exp.java.jar.hugejar.builder.Main</mainClass>
								</transformer>
							</transformers>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>cz.znj.kvr.sw.exp.java.jar.hugejarexec</groupId>
				<artifactId>huge-jar-exec-generator-maven-plugin</artifactId>
				<version>${project.version}</version>
				<executions>
					<execution>
						<id>generate-count</id>
						<phase>package</phase>
						<goals><goal>generate</goal></goals>
						<configuration>
							<input>${project.build.directory}/${project.name}.jar</input>
							<output>${project.build.directory}/${project.name}-count.jar</output>
							<entryCount>265000</entryCount>
							<entrySize>0</entrySize>
						</configuration>
					</execution>
					<execution>
						<id>generate-huged</id>
						<phase>package</phase>
						<goals><goal>generate</goal></goals>
						<configuration>
							<input>${project.build.directory}/${project.name}.jar</input>
							<output>${project.build.directory}/${project.name}-huged.jar</output>
							<entryCount>265000</entryCount>
							<entrySize>1000</entrySize>
						</configuration>
					</execution>
					<execution>
						<id>generate-prepend</id>
						<phase>package</phase>
						<goals><goal>generate</goal></goals>
						<configuration>
							<input>${project.build.directory}/${project.name}.jar</input>
							<output>${project.build.directory}/${project.name}-prepend.jar</output>
							<entryCount>265000</entryCount>
							<entrySize>1000</entrySize>
							<append>false</append>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

	<dependencies>

		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
		</dependency>

	</dependencies>

</project>
